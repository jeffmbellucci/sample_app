<% provide(:title, 'Sign Up') %>
<h1>Sign up</h1>
<br>
<%= render 'shared/error_messages'%>
	<br>
	SIGN UP FOR ACCOUNT
	<br>
	
	<%= form_for(@user) do |f| %>
	
	<%= f.label :name, "Your name, dummy" %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br>
	<%= f.label :password %>
	<%=f.password_field :password %>
	<br>
	<%= f.label :password_confirmation, "Please confirm PW" %>
	<%=f.password_field :password_confirmation %>
	<br>
	<%= f.submit "Submit yo shit." %>
	<%end%>
	
